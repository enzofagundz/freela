// Desenvolvimento
datasource db {
  provider = "sqlite"
  url      = "file:../data/dev.db"
}

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  name      String
  password  String
  role      String?
  project   UserProjectRelation[]
}

model Category {
  id        Int   @id @default(autoincrement())
  name      String
  project   Project[]
}


model Customer {
  id        Int     @id @default(autoincrement())
  name      String
  email     String
  project   Project[]
}

model Project {
  id            Int        @id @default(autoincrement())
  name          String
  description   String?
  price         Decimal
  status        String
  deliveryDate  DateTime
  user          UserProjectRelation[]
  customerId    Int
  customer      Customer  @relation(fields: [customerId], references: [id])
  categoryId    Int
  category      Category  @relation(fields: [categoryId], references: [id])
}

model UserProjectRelation {
  id          Int       @id @default(autoincrement())
  user        User      @relation(fields: [userId], references: [id])
  userId      Int
  project     Project   @relation(fields: [projectId], references: [id])
  projectId   Int
}